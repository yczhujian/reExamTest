{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "python311Packages.pip"]
        },
        "install": {
          "cmds": ["cd api && pip install -r requirements.txt"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "cd api && python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "envVars": {
    "PORT": {
      "default": "8000"
    },
    "PYTHON_VERSION": {
      "default": "3.11"
    },
    "SUPABASE_URL": {
      "default": "https://grjslrfvlarfslgtoeqi.supabase.co"
    },
    "ALLOWED_ORIGINS": {
      "default": "https://re-exam-test.vercel.app,https://*.vercel.app,http://localhost:3000,http://localhost:3001,http://localhost:3002"
    }
  }
}